{
  "name": "create-chrome-ext-ts",
  "version": "1.1.3",
  "description": "A CLI tool to generate Chrome extension projects with TypeScript and Manifest V3",
  "bin": {
    "create-chrome-ext-ts": "./bin/create-chrome-extension.js"
  },
  "files": [
    "bin",
    "src",
    "manifest.json",
    "package.json",
    "tsconfig.json",
    "webpack.config.js",
    ".gitignore",
    "README.md"
  ],
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "clean": "rm -rf dist",
    "generate": "node generate-project.js"
  },
  "keywords": [
    "chrome-extension",
    "typescript",
    "cli",
    "generator",
    "template",
    "manifest-v3",
    "webpack"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.10.0",
    "copy-webpack-plugin": "^11.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
