{
  "manifest_version": 3,
  "name": "Chrome Extension TypeScript Template",
  "version": "1.0.0",
  "description": "A template for Chrome extensions built with TypeScript",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}

